// Place your settings in this file to overwrite the default settings
{
  // "editor.fontFamily": "'SourceCodePro-Light",
  "editor.fontFamily": "'FiraCode-Light'",
  "editor.fontSize": 13,
  "editor.fontLigatures": true,
  "editor.rulers": [100],
  "editor.renderIndentGuides": true,

  "files.insertFinalNewline": true,

  // Vim Configuration
  "vim.leader": ",",
  "vim.useCtrlKeys": true,
  // When there is a previous search pattern, highlight all its matches.
  "vim.hlsearch": true,
  "vim.sneak": true,
  "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.enableNeovim": true,
  "vim.cursorStylePerMode.insert": "line",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<space>"],
      "after": ["/"]
    },
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["<leader>", "g"],
      "commands": ["workbench.view.search"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["<leader>", "<cr>"],
      "commands": [":nohl"]
    },
    {
      "before": ["Z", "Z"],
      "commands": [":wq"]
    },
    // windows, tabs
    {
      "before": ["<C-j>"],
      "after": ["<C-w>", "j"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<C-w>", "k"]
    },
    {
      "before": ["<C-h>"],
      "after": ["<C-w>", "h"]
    },
    {
      "before": ["<C-l>"],
      "after": ["<C-w>", "l"]
    },
    // bookmarks
    {
      "before": ["<leader>", "m"],
      "commands": ["bookmarks.toggle"]
    },
    {
      "before": ["<leader>", "b"],
      "commands": ["bookmarks.list"]
    }
  ],

  // ESLint configuration
  "eslint.enable": false,

  // Controls if opened editors from Quick Open show as preview. Preview editors are reused until they are kept (e.g. via double click or editing).
  "workbench.editor.enablePreviewFromQuickOpen": false,

  // Controls if the explorer should automatically reveal files when opening them.
  "explorer.autoReveal": false,

  // File header Configuration

  "fileheader.Author": "@hjl",

  // By default, common template. Do not modify it!!!!!
  "fileheader.tpl": "/*\r\n * @Author: {author} \r\n * @Date: {createTime} \r\n * @Last Modified by:   {lastModifiedBy} \r\n * @Last Modified time: {updateTime} \r\n * @Version: 0.1.0 \r\n * @Description: \r\n */\r\n",

  // By default, update file  username.
  "fileheader.LastModifiedBy": "hjl",
  "editor.cursorStyle": "block",

  // PlantUML configuration
  "plantuml.exportSubFolder": false,

  // Specifies Lint tool name.
  "go.lintTool": "golint",
  "files.associations": {
    "*.html": "html"
  },

  // A path to flow that is used for your project
  "prettier.printWidth": 100,
  "prettier.tabWidth": 2,
  "prettier.singleQuote": true,
  "prettier.semi": true,

  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "window.zoomLevel": 0,
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  "workbench.colorTheme": "Material Theme Lighter High Contrast",
  "workbench.iconTheme": "material-icon-theme",

  "search.exclude": {
    "**/vendor": true
  },
  "editor.formatOnSave": true,
  "vetur.format.defaultFormatter.stylus": "none",
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.views.search.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.hovers.currentLine.enabled": false,

  // languages
  "[makefile]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": true,
  "terminal.integrated.fontFamily": "FiraCode-Regular",
  "gitlens.currentLine.enabled": false,
  "gitlens.views.compare.enabled": true
}
